{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build snake game",
            "type": "shell",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-g",
                "-Wall",
                "src/main.cpp",
                "src/snake.cpp",
                "src/fruit.cpp",
                "-o",
                "main.exe",
                "-I", "${workspaceFolder}/Header",
                "-I", "D:/SDL2/include",
                "-L", "D:/SDL2/lib",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
